{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/competition#",
    "new": {
        "title": "Nová súťaž",
        "transCode": "schema.competition.new",
        "table": "competitions",
        "_security": {
            "_create": {
                "_static": [
                    "Registry - write"
                ]
            },
            "_read": {
                "_static": [
                    "Registry - read"
                ]
            },
            "_modify": {
                "_static": [
                    "Registry - write"
                ]
            }
        },
        "listFields": [
            {
                "field": "baseData.name",
                "title": "Názov súťaže",
                "transCode":"schema.competition.listFields.name"
            },
            {
                "field": "baseData.season.refData.name",
                "title": "Sezóna",
                "transCode":"schema.competition.listFields.season"
            },
            {
                "field": "baseData.ageCategory.refData.name",
                "title": "Veková kategória",
                "transCode":"schema.competition.listFields.ageCategory"
            },
            {
                "field": "baseData.gender",
                "title": "Pohlavie",
                "transCode":"schema.competition.listFields.gender"
            }
        ],
        "properties": {
            "baseData": {
                "title": "Základné údaje",
                "transCode": "schema.competition.baseData",
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Názov súťaže",
                        "transCode": "schema.competition.name",
                        "type": "string",
                        "required": true
                    },
                    "season": {
                        "title": "Súťažný ročnik",
                        "transCode": "schema.competition.season",
                        "$objectLink": {
                            "registry": "seasons",
                            "name": "baseData.name"
                        },
                        "required": true
                    },
                    "ageCategory": {
                        "title": "Veková kategória",
                        "transCode": "schema.competition.ageCategory",
                        "type": "object",
                        "$objectLink": {
                            "registry": "ageCategories",
                            "name": "baseData.name"
                        },
                        "required": true
                    },
	                "gender": {
	                    "title": "Pohlavie",
	                    "transCode": "schema.people.gender",
	                    "type": " string",
	                    "enum": [
	                    	"M",
	                    	"Z"
	                    ],
						"enumTransCodes":[
							"schema.competition.gender.man",
							"schema.competition.gender.woman"
						],
	                    "required": true,
	                    "render": {
	                        "component": "psui-selectbox",
	                        "searchable": true
	                    }
	                },
                    "competitionLevel": {
                        "title": "Úroveň súťaže",
                        "transCode": "schema.competition.competitionLevel",
                        "type": "integer",
                        "required": false
                    }
                }
            }
        }
    },
    "view": {
        "title": "Detail súťaže",
        "transCode": "schema.competition.view",
        "table": "competitions",
        "listFields": {
            "$ref": "uri://registries/competition#new/listFields"
        },
        "properties": {
            "baseData": {
                "$ref": "uri://registries/competition#new/properties/baseData"
            }
        }
    },
    "search": {
    	"title": "súťaž",
    	"transCode": "schema.competition.search",
        "table": "competitions",
        "listFields": {
            "$ref": "uri://registries/competition#new/listFields"
        },
        "properties": {
            "$ref": "uri://registries/competition#new/properties"
        }
    }
}