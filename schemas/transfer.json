{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/transfer#",
	"new": {
		"table" : "transfers",
		"title" : "Nový transfer",
		"xxtransCode": "schema.transfer.title",
		"listFields": [
			{"field":"baseData.player.refData.name", "title":"Meno Hráča"},
			{"field":"baseData.player.refData.surName", "title":"Priezvisko Hráča"},
			{"field":"baseData.clubFrom.refData.name", "title":"Z klubu"},
			{"field":"baseData.clubTo.refData.name", "title":"Do klubu"}
		],
		"properties":{
			"_security": {
				"_create": {
					"_static": [
						"Security - write"
					]
				},
				"_read": {
					"_static": [
						"Security - read"
					]
				},
				"_modify": {
					"_static": [
						"Security - write"
					]
				}
			},
			"baseData":{
				"title": "Základné údaje o transfere",
				"type": "object",
				"properties": {
					"id": {
						"title": "ID",
						"type": "string",
						"required": true
					},
					"player": {
						"title": "Hráč",
						"type": "string",
						"required": true,
						"$objectLink": {
							"registry": "people",
							"name": "baseData.name",
							"surName": "baseData.surName"
						}
					},
					"clubFrom": {
						"title": "Z klubu",
						"type": "string",
						"required": true,
						"$objectLink": {
							"registry": "organizations",
							"name": "club.name"
						}
					},
					"clubTo": {
						"title": "Do klubu",
						"type": "string",
						"required": true,
						"$objectLink": {
							"registry": "organizations",
							"name": "club.name"
						}
					},
					"typeOfTransfer": {
						"title": "Typ transferu",
						"type": "string",
						"required": true,
						"enum":[
							"prestup",
							"hosťovanie"
						],
						"render":{
							"component": "psui-selectbox",
							"searchable": true
						}
					},
					"stateOfTransfer": {
						"title": "Stav transferu",
						"type": "string",
						"required": true,
						"enum":[
							"schválený",
							"neschválený",
							"storno",
							"v riešení"
						],
						"render":{
							"component": "psui-selectbox",
							"searchable": true
						}
					},
					"dateOfRealization": {
						"title": "Dátum realizácie transféru",
						"type": "string",
						"required": true,
						"render" : {
							"component" : "psui-datepicker"
						}
					},
					"dateFrom": {
						"title": "Dátum od",
						"type": "string",
						"required": true,
						"render" : {
							"component" : "psui-datepicker"
						}
					},
					"dateTo": {
						"title": "Dátum do",
						"type": "string",
						"required": false,
						"render" : {
							"component" : "psui-datepicker"
						}
					},
					"note": {
						"title": "Poznámka",
						"type": "string",
						"required": false,
						"large":true
					},
					"state": {
						"title": "Stav",
						"type": "string",
						"required": true,
						"enum":[
							"aktívny",
							"neaktívny"
						],
						"render":{
							"component": "psui-selectbox",
							"searchable": true
						}
					}
				}
			}
		}
	},
	"view" : {
		"$ref" : "uri://registries/transfer#new"
	},
	"search" : {
		"table": "transfers",
    	"title": "transfér",
        "listFields": {
            "$ref": "uri://registries/transfer#new/listFields"
        },
        "properties": {
            "baseData": {
                "$ref": "uri://registries/transfer#new/properties/baseData"
            }
        }
	}
}
